{% extends "base.jinja2" %}
{%  block content %}
    <div class="page-header">
    <h1>Edit User  '{{  user.username }}'</h1>
    </div>
    <p>User email <strong>{{  user.email }}</strong></p>


    <div class="panel panel-default">
    <div class="panel-body">

        {%  if user.active %}
        <a class="btn btn-warning" href="{{  url_for('users.deactivate_user', user_id=user._id) }}" role="button">Deactivate user</a>
        {% else %}
                <a class="btn btn-success" href="{{  url_for('users.activate_user', user_id=user._id) }}" role="button">Activate user</a>

        {% endif %}
    <a class="btn btn-danger" href="{{  url_for('users.delete_user', user_id=user._id) }}" role="button">Permanently delete user</a>
    <br>
    <br>




    <form action ="{{  url_for('users.change_permission', user_id=user._id) }}" method="post">
            <div class="form-group">
            <div class="btn-group" data-toggle="buttons">
              <label class="btn btn-{{ 'success active' if user.permission==1 else 'primary'}}">
                <input type="radio" name="permission" id="permission" autocomplete="off" value=1> User
              </label>
              <label class="btn btn-{{ 'success active' if user.permission==2 else 'primary'}}">
                <input type="radio" name="permission" id="permission" value=2 autocomplete="off"> Analyst
              </label>
              <label class="btn btn-{{ 'success active' if user.permission==3 else 'primary'}}">
                <input type="radio" name="permission" id="permission" value=3 autocomplete="off"> Administrator
              </label>
            </div>
            </div>
        <button type="submit" class="btn btn-default">Save permission</button>
    </form>


    </div>
    </div>

{%  endblock %}