{% extends "base.jinja2" %}
{%  block content %}
    <div class="page-header">
    <h1>Alert <small> for '{{  user.email }}'</small></h1>
    </div>
    <p>User email <strong>{{  user.email }}</strong></p>


    <div class="panel panel-default">
    <div class="panel-body">

        {%  if user.active %}
        <a class="btn btn-danger" href="{{  url_for('users.deactivate_user', user_id=user._id) }}" role="button">Deactivate user</a>
        {% else %}
                <a class="btn btn-success" href="{{  url_for('users.activate_user', user_id=user._id) }}" role="button">Activate user</a>

        {% endif %}
    <a class="btn btn-danger" href="{{  url_for('users.delete_user', user_id=user._id) }}" role="button">Permanently delete user</a>

    </div>
    </div>

{%  endblock %}