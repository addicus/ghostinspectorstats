{% extends "base.jinja2" %}
{%  block content %}
    <div class="page-header">
    <h1>User Accounts</h1>
    </div>
    <div class="list-group">

    {%  for user in users %}
    <a href="{{ url_for('users.get_user_page', user_id=user._id) }}" class="list-group-item">
        <h4 class="list-group-item-heading"> {{  '<span class="glyphicon glyphicon-remove-circle"></span>' if not user.active else '' }} {{  user.username }}</h4>
        <p class="list-group-item-text">Email {{  user.email }}<br/></p>
        <p class="list-group-item-text">Role:
        {% if user.permission==1 %}
            User
        {% elif user.permission==2 %}
            Analyst
        {% else %}
            Administrator
        {% endif %}

        <br/></p>
    </a>
    {%  endfor %}
    </div>
    <a class="btn btn-success" href="{{  url_for('users.create_user') }}"><span class="glyphicon glyphicon-plus"></span>Create new</a>

{%  endblock %}